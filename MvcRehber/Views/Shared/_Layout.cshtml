<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm " style="background-color: #e3f2fd;">
        <div class="container">
            @Html.ActionLink("Rehber", "", "", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">

                @if (Session["UsernameSS"] != null)
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Kisiler", "Index", "Kisi", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                }


                    <ul class="nav navbar-nav float-end" >
                        @if (Session["UsernameSS"] != null)
                        {
                            <li><p style="color: #ff6a00; ">Hoş geldiniz <span style="color:#ffffff">@Session["UsernameSS"]   </span></p></li>
                            <li>@Html.ActionLink("Oturumu kapat", "Logout", "TBLUserInfo", new { area = "" }, new { @class = "nav-link", style = "color:gray; " })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Kaydol", "Signup", "TBLUserInfo", new { area = "" }, new { @class = "nav-link float-end" })</li>
                            <li>@Html.ActionLink("Oturum aç", "Login", "TBLUserInfo", new { area = "" }, new { @class = "nav-link float-end" })</li>
                        }

                    </ul>
            </div>
            </div>
            
        </nav>
        <div class="container body-content">

            @if (TempData["BasariliMesaj"] != null)
            {
                <div class="alert alert-success">
                    @TempData["BasariliMesaj"]
                </div>
            }

            @if (TempData["HataliMesaj"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["HataliMesaj"]
                </div>
            }

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - HAET Contact Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
